<%= form_with(model: oppourtunity, local: true) do |form| %>
  <%= render "layouts/nav/validation", item: @oppourtunity %>

  <div class="form-group">
    <%= form.label :Title %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Open %>
    <%= form.select :open, options_for_select({ "Yes" => true, "No" => false }, @oppourtunity.open ), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Application_deadline %>
    <%= form.date_field :application_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Introduction %>
    <%= form.text_area :introduction, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Description %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Timeline %>
    <%= form.text_field :conclusion, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "form-control" %>
    <%= form.hidden_field :photo_cache %>

    <% if @oppourtunity.photo.present? %>
      <%= image_tag @oppourtunity.photo.thumb.url, class: "mt-4" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
