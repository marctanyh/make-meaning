<%= form_with(model: oppourtunity, local: true) do |form| %>
  <%= render "layouts/nav/validation", item: @oppourtunity %>

  <div class="form-group">
    <%= form.label :Title %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Description %>
    <%= form.text_field :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "form-control" %>
    <%= form.hidden_field :photo_cache%>

    <% if @oppourtunity.photo.present? %>
      <%= image_tag @oppourtunity.photo.thumb.url, class: "mt-4" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
