<h3>Opportunities</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oppourtunities.each do |oppourtunity| %>
      <tr>
        <td><%= oppourtunity.name %></td>
        <td><%= link_to 'Show', oppourtunity %></td>
        <td><%= link_to 'Edit', edit_oppourtunity_path(oppourtunity) %></td>
        <td><%= link_to 'Destroy', oppourtunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Oppourtunity', new_oppourtunity_path, class: "btn btn-primary"  %>
