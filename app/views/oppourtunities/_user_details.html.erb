<div class="text-center border p-4 pb-4 ml-lg-4">
  <div class="mb-2">
    <%= profile_picture user %>
  </div>
  <h3 class="h4"><%= user.full_name%></h3>
  <p><%= user.company%></p>

  
  <div class="row">
    <div class="col-md-6 pr-1">
      <%= link_to "Profile", profile_path(user.id), class:"btn btn-block btn-secondary text-uppercase"%>
    </div>
    <div class="col-md-6 pl-1">
      <div class="btn btn-block btn-success  text-uppercase" data-toggle="modal" data-target="#contact-modal">Apply</button>
    </div>
  </div>
</div>