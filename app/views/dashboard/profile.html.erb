
<div class="oppourtunity-main-photo" style="background-image:url('<%= oppourtunity_photo_url @oppourtunities.last %>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-lg-6">
    

          <p class="h2 mb-1"><%= @account.full_name %></p>
          <p class="mb-3"><%= @account.company %></p>
          <p class="text-muted">Registered for <%= time_ago_in_words @account.created_at%></p>
        </div>
        <div class="col-lg-6 text-center">
          <div class="row p-3 "> 
            <div class="col-6">

            </div>
            <div class="col-6">

            </div>
          </div>
        </div>
      </div>   
   
      
   
      <div class="row border-top mt-5 pt-4">
        <div class="col">
          <p class="h3">Brief Description</p>

            <div id="opp-details">

              <p>
                <p class="h5">About me</p>
                <%= simple_format @account.details %>
      
              </p>

            </div>

            <button class="btn btn-outline-info mt-3" id="toggleDetails">Show more</button>

        </div>
      </div>
    </div>

    <div class="col-md-4">
            
      <%= render "oppourtunities/profile_contact_details", user: @account%>
      

    </div>
  </div>
</div>


<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
    <div class="col-12">
      <p class="h3 mb-3">Current opportunities form this user</p>
    </div>
      <%= render "oppourtunities/list", oppourtunities: @oppourtunities %>
    </div>
  </div>
</section>


<%= render "oppourtunities/apply_modal", user: @account %>
